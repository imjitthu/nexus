pipeline {
    agent any

    environment {
        task = "Uploading artifacts to nexus"
    }

    stages {
        // stage ('Cloning Shipping Repository') {
        //     steps {
        //         git 'https://github.com/imjitthu/nexus.git'
        //     }
        // }
        stage ('Create Shipping Artifact') {
            steps {
                echo "${env.task}"
                scritpt {
                    sh "mvn clean package"
                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: 'spring-boot-starter-parent', 
                            classifier: '', 
                            file: 'target/*.jar', 
                            type: 'jar'
                            ]
                        ], 
                        credentialsId: 'nexus', 
                        groupId: 'org.springframework.boot', 
                        nexusUrl: 'lab.jithendar.com:8081', 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: 'shipping', 
                        version: '2.3.3.RELEASE'
                }
            }
        }
    }
}