pipeline {
    agent any

    environment {
        app = "shipping"
        type = "jar"
    }

    stages {
        stage ('Donwload & Create Artifacts With Maven') {
            steps {
                sh "curl https://github.com/imjitthu/shipping_docker/archive/refs/heads/master.zip"
                sh "ls -al"
                sh "unzip shipping_docker-master.zip"
                sh "mv shipping_docker-master/* ."
            }
        }
