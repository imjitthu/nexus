pipeline {
    agent any

    environment {
        task = "Uploading artifacts to nexus"
    }

    stages {
        stage ('Generating Artifacts With Maven') {
            steps {
                sh "mvn clean package"
            }
        }
        stage ('Create Shipping Artifact') {
            steps {
                script {
                    def pom = readMavenPom file:'pom.xml'
                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: "${pom.artifactId}", 
                            classifier: '', 
                            file: "target/shipping-${pom.versions}.jar", 
                            type: 'jar'
                            ]
                        ], 
                        credentialsId: 'nexus', 
                        groupId: 'org.springframework.boot', 
                        nexusUrl: 'lab.jithendar.com:8081', 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: 'shipping', 
                        version: "${pom.version}"'
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}