pipeline {
    agent any

    environment {
        app = "shipping"
        type = "jar"
    }

    stages {
        stage ('Donwload & Create Artifacts With Maven') {
            steps {
                sh "mvn clean package"
            }
        }
        stage ('Uploading Artifacts to Nexus Repository') {
            steps {
                script {
                    def pom = readMavenPom file:'pom.xml'
                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: "${pom.artifactId}", 
                            classifier: '', 
                            file: "target/${env.app}-${pom.version}.${env.type}", 
                            type: "${env.type}"
                            ]
                        ], 
                        credentialsId: 'nexus', 
                        groupId: "${pom.groupId}", 
                        nexusUrl: 'lab.jithendar.com:8081', 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: "${env.app}", 
                        version: "${pom.version}"
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}