pipeline {
    agent any

    environment {
        app = "shipping"
        type = "jar"
    }

    stages {
        stage ('Generating Artifacts With Maven') {
            steps {
                sh "mvn clean package"
            }
        }
        stage ('Create Shipping Artifact') {
            steps {
                script {
                    def pom = readMavenPom file:'pom.xml'
                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: "${pom.artifactId}", 
                            classifier: '', 
                            file: "target/${env.app}-${pom.versions}.${env.type}", 
                            type: "${env.type}"
                            ]
                        ], 
                        credentialsId: 'nexus', 
                        groupId: 'org.springframework.boot', 
                        nexusUrl: 'lab.jithendar.com:8081', 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: "${env.type}", 
                        version: "${pom.version}"
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}