pipeline {
    agent any

    environment {
        nexus_url = "lab.jithendar.com:8081"
        app       = "shipping"
        path      = "target"
        type      = "jar"
    }

    stages {
        stage ('Create Shipping Artifact') {
            steps {
                script {
                    def pom = readMavenPom file: 'pom.xml'
                    def ver = pom.version
                    def gid = pom.groupId
                    def aid = pom.artifactId
                    sh "mvn clean package"
                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: "${aid}", 
                            classifier: '', 
                            file: "${env.path}/${env.app}-${env.ver}.${env.type}", 
                            type: "${env.type}"
                            ]
                        ], 
                        credentialsId: 'nexus', 
                        groupId: "${gid}", 
                        nexusUrl: "${env.nexus_url}", 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: "${app}", 
                        version: "${ver}"
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}